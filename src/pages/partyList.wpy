<script>

  import wepy from 'wepy'
  import { service } from '../config.js'
  import base from '../mixins/base'
  import http from '../mixins/http'
  import user from '../mixins/user'
  import getFormId from '../mixins/getFormId'
  import partyList from '../components/List'

  export default class station extends wepy.page {
    mixins = [base, http, user, getFormId]
    config = {
      navigationBarTitleText: '聚会大厅',
      navigationBarTextStyle: 'black',
      navigationBarBackgroundColor: '#fafffb',
      enablePullDownRefresh: true
    }
    data = {
      noMoreList: false,
      loading: false,
      list: [],
      user: [],
      icon_animation: false,
      nav_active_joined: true,
      nav_active_finished: false,
      nav_active_browsed: false,
      nav_active: false,
      Show: false,
      rotate: true,
      changerotate: false,
      shrink: false,
      CollectAnimation: false,
      showanimation: true,
      type: 'JOINED',
      page: 1,
      message: false,
      hideMessage: false
    }

    onLoad() {
      this.update(this.type, this.page)
    }
    onPullDownRefresh() {
      this.noMoreList = false
      this.page = 1
      this.update(this.type, this.page)
    }
    onShareAppMessage(res) {
      return this.$parent.onShareAppMessage(this.config.navigationBarTitleText)
    }
    onShow() {
      this.$parent.getTracker(this.$root.$name, this.config.navigationBarTitleText)
//      debugger
    }
    onReachBottom() {
      console.log('到底了/.../')
      setTimeout(() => {
        this.update(this.type, this.page)
        this.$apply()
      }, 200)
    }
    // 更新图书列表
    update(type, page) {
      let that = this
      that.type = type
      if (that.loading || that.noMoreList) return
      that.loading = true
      // 请求列表
//      let url = ''
      this.$get({
        url: service.parties,
        data: {
          type: type,
          page: page,
          formId: this.formId
        }
      }, {
        success: ({code, data}) => {
          that.noMoreList = false
//          this.list = data.data
          data = data.data
          if (that.list.length == 0 || that.page == 1) {
//            setTimeout(() => {
//            that.list = []
            that.list = data.map(function (item) {
              return item
            })
            if (that.list.length == 0) {
              that.message = true
              that.hideMessage = true
              that.$apply()
            }
//            }, 200)
          } else {
            data.map(function (item, index) {
              that.list.push(item)
            })
          }
          that.page += 1
        },
        fail: ({code, data}) => {
          // 失败了什么也不做
        },
        complete: () => {
          this.loading = false
        }
      })
    }

    methods = {
      rotate() {
        if (this.showanimation) {
          this.changerotate = true
          setTimeout(() => {
            this.$apply()
          }, 500)
          this.shrink = false
          this.showanimation = false
        } else {
          setTimeout(() => {
            this.$apply()
          }, 500)
          this.shrink = true
          this.showanimation = true
        }
      },
      navlist(type) {
        let that = this
        that.page = 1
        that.list = []
        that.type = type
        that.hideMessage = false
        that.nav_active_joined = false
        that.nav_active_finished = false
        that.nav_active_browsed = false
        that.nav_active = false
        if (type == 'JOINED') {
          that.nav_active_joined = true
          that.update('JOINED', that.page)
        } else if (type == 'FINISHED') {
          that.nav_active_finished = true
          that.update('FINISHED', that.page)
        } else if (type == 'BROWSED') {
          that.nav_active_browsed = true
          that.update('BROWSED', that.page)
        } else {
          that.nav_active = true
          that.update('ALL', that.page)
        }
        that.$apply()
      },
      goto(url) {
        wx.navigateTo({url: url})
      },
      gotoparty() {
        this.icon_animation = true
        setTimeout(() => {
          this.icon_animation = false
          this.$apply()
        }, 800)
        if (this.showanimation) {
          this.changerotate = true
          setTimeout(() => {
            this.message = false
            this.$apply()
          }, 10)
          this.shrink = false
          this.showanimation = false
        } else {
          setTimeout(() => {
            this.message = true
            this.$apply()
          }, 500)
          this.shrink = true
          this.showanimation = true
        }
//        wx.navigateTo({url: '/pages/party/edit_party'})
      }

    }

    components = {
      partyList
    }
  }
</script>

